{
  "name": "sruja",
  "displayName": "Sruja Language Support",
  "description": "Syntax highlighting and snippets for Sruja architecture-as-code language",
  "version": "0.1.0",
  "publisher": "sruja-ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/sruja-ai/sruja"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "categories": [
    "Programming Languages"
  ],
  "icon": "icons/sruja.svg",
  "main": "./out/extension.js",
  "activationEvents": [
    "*",
    "onStartupFinished"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sruja",
        "aliases": [
          "Sruja",
          "sruja"
        ],
        "extensions": [
          ".sruja"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sruja",
        "scopeName": "source.sruja",
        "path": "./syntaxes/sruja.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sruja",
        "path": "./snippets/sruja.json"
      }
    ],
    "iconThemes": [
      {
        "id": "sruja-icons",
        "label": "Sruja File Icons",
        "path": "./icons/sruja-icon-theme.json"
      }
    ],
    "commands": [
      {
        "command": "sruja.showPreview",
        "title": "Show Diagram Preview",
        "category": "Sruja",
        "icon": "$(preview)"
      },
      {
        "command": "sruja.focusSidebarView",
        "title": "Focus Diagram View",
        "category": "Sruja"
      },
      {
        "command": "sruja.openDiagram",
        "title": "Open Mermaid Diagram",
        "category": "Sruja"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "sruja.showPreview",
          "when": "resourceExtname == .sruja",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "sruja.showPreview",
          "title": "Sruja: Show Diagram Preview",
          "when": "true"
        },
        {
          "command": "sruja.focusSidebarView",
          "title": "Sruja: Focus Diagram View",
          "when": "true"
        },
        {
          "command": "sruja.openDiagram",
          "title": "Sruja: Open Mermaid Diagram",
          "when": "true"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "sruja.mermaidPreview",
          "name": "Sruja Diagram",
          "when": "activeEditorLangId == sruja"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "install:cursor": "npm run compile && node scripts/install-cursor.js",
    "update:cursor": "npm run install:cursor",
    "install:trae": "npm run compile && node scripts/install-trae.js",
    "update:trae": "npm run install:trae",
    "install:antigravity": "npm run compile && node scripts/install-antigravity.js",
    "update:antigravity": "npm run install:antigravity",
    "verify": "node scripts/verify-install.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5"
  }
}