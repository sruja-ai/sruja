{
  "name": "sruja-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:website": "turbo run dev --filter=@sruja/website...",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "clean": "rimraf dist && turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky",
    "check:unused": "ts-prune --project tsconfig.json || true",
    "check:unused:files": "unimported || true",
    "check:unused:deps": "depcheck || true",
    "check:unused:all": "npm run check:unused && npm run check:unused:files && npm run check:unused:deps"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.1",
    "depcheck": "^1.4.7",
    "glob": "^11.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.2.5",
    "size-limit": "^11.1.1",
    "terser": "^5.44.1",
    "ts-prune": "^0.10.3",
    "turbo": "^2.1.3",
    "unimported": "^1.31.0",
    "zx": "^8.8.5"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=18.0.0"
  }
}
