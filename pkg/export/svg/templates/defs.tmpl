{{if .UseShadows}}
<filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
  <feGaussianBlur in="SourceAlpha" stdDeviation="{{.ShadowBlur}}"/>
  <feOffset dx="{{.ShadowOffset}}" dy="{{.ShadowOffset}}" result="offsetblur"/>
  <feComponentTransfer>
    <feFuncA type="linear" slope="0.3"/>
  </feComponentTransfer>
  <feMerge>
    <feMergeNode/>
    <feMergeNode in="SourceGraphic"/>
  </feMerge>
</filter>
{{end}}
{{if .UseGradients}}
<linearGradient id="grad-person" x1="0%" y1="0%" x2="0%" y2="100%">
  <stop offset="0%" style="stop-color:{{lighten .PersonFill}};stop-opacity:1" />
  <stop offset="100%" style="stop-color:{{.PersonFill}};stop-opacity:1" />
</linearGradient>
<linearGradient id="grad-system" x1="0%" y1="0%" x2="0%" y2="100%">
  <stop offset="0%" style="stop-color:{{lighten .SystemFill}};stop-opacity:1" />
  <stop offset="100%" style="stop-color:{{.SystemFill}};stop-opacity:1" />
</linearGradient>
<linearGradient id="grad-container" x1="0%" y1="0%" x2="0%" y2="100%">
  <stop offset="0%" style="stop-color:{{lighten .ContainerFill}};stop-opacity:1" />
  <stop offset="100%" style="stop-color:{{.ContainerFill}};stop-opacity:1" />
</linearGradient>
<linearGradient id="grad-database" x1="0%" y1="0%" x2="0%" y2="100%">
  <stop offset="0%" style="stop-color:{{lighten .DatabaseFill}};stop-opacity:1" />
  <stop offset="100%" style="stop-color:{{.DatabaseFill}};stop-opacity:1" />
</linearGradient>
<linearGradient id="grad-queue" x1="0%" y1="0%" x2="0%" y2="100%">
  <stop offset="0%" style="stop-color:{{lighten .QueueFill}};stop-opacity:1" />
  <stop offset="100%" style="stop-color:{{.QueueFill}};stop-opacity:1" />
</linearGradient>
{{end}}
<marker id="arrow" markerWidth="12" markerHeight="12" refX="11" refY="3.5" orient="auto" markerUnits="strokeWidth">
  <path d="M0,0 L11,3.5 L0,7 Z" fill="{{.EdgeColor}}" stroke="{{.EdgeColor}}" stroke-width="0.5"/>
</marker>
{{range .Icons}}
<symbol id="icon-{{.Name}}" viewBox="0 0 24 24">{{.Content}}</symbol>
{{end}}

