{
  "name": "@sruja/ui",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./design-system": {
      "import": "./dist/design-system/index.js",
      "types": "./dist/design-system/index.d.ts"
    },
    "./design-system/styles.css": "./src/design-system/styles.css",
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsc && npm run copy-css",
    "copy-css": "node scripts/copy-css.cjs",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf dist"
  },
  "size-limit": [
    {
      "path": "dist/**/*.js",
      "limit": "200 KB"
    }
  ],
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@mantine/core": "^8.3.10",
    "@mantine/hooks": "^8.3.10",
    "@sruja/shared": "*",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@sruja/eslint-config": "*",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^22.7.9",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "jsdom": "^24.0.0",
    "minimatch": "^9.0.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.3",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "lucide-react": "^0.555.0",
    "monaco-editor": "^0.52.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
