{
  "name": "@sruja/shared",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./lsp": {
      "import": "./src/lsp/index.ts",
      "types": "./src/lsp/index.ts"
    },
    "./utils/cssVars": {
      "import": "./src/utils/cssVars.ts",
      "types": "./src/utils/cssVars.ts"
    },
    "./export/markdown": {
      "import": "./src/export/markdown.ts",
      "types": "./src/export/markdown.ts"
    },
    "./export/mermaid": {
      "import": "./src/export/mermaid.ts",
      "types": "./src/export/mermaid.ts"
    },
    "./types/architecture": {
      "import": "./src/types/architecture.ts",
      "types": "./src/types/architecture.ts"
    },
    "./node/wasmAdapter": {
      "import": "./src/node/wasmAdapter.ts",
      "types": "./src/node/wasmAdapter.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf dist"
  },
  "size-limit": [
    {
      "path": "dist/**/*.js",
      "limit": "50 KB"
    }
  ],
  "devDependencies": {
    "@sruja/eslint-config": "*",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "jsdom": "^24.1.3",
    "lucide": "^0.555.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "posthog-js": "^1.299.0",
    "vitest": "^4.0.15"
  }
}
