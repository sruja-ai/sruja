{
  "name": "@sruja/designer",
  "private": true,
  "version": "0.1.1",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./src/index.tsx",
  "exports": {
    ".": "./src/index.tsx",
    "./src/App": "./src/App.tsx"
  },
  "scripts": {
    "dev": "npm run copy:examples && node scripts/ensure-wasm-exists.mjs && vite",
    "build": "npm run typecheck && npm run copy:examples && npm run copy:wasm && vite build",
    "copy:examples": "rm -rf public/examples && cp -R ../../examples public/examples",
    "copy:wasm": "mkdir -p public/wasm && cp ../../apps/website/public/wasm/sruja.wasm public/wasm/ && cp ../../apps/website/public/wasm/wasm_exec.js public/wasm/",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.app.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "npm run build:test && playwright test",
    "test:e2e:dev": "PLAYWRIGHT_TEST_USE_DEV=true playwright test",
    "test:fixes": "tsx scripts/test-fixes.ts",
    "test:quality": "playwright test tests/ecommerce-quality.spec.ts",
    "test:quality:prod": "tsx scripts/test-quality-prod.ts",
    "build:test": "npm run clean && BASE_PATH=/ npm run build",
    "preview:test": "vite preview --port 4322 --host",
    "improve:iterative": "tsx scripts/improve-iteratively.ts",
    "analyze:metrics": "tsx scripts/analyze-metrics.ts",
    "analyze:rules": "tsx scripts/analyze-rules.ts",
    "report:generate": "tsx scripts/generate-report.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@hpcc-js/wasm-graphviz": "^1.17.0",
    "@likec4/core": "^1.46.4",
    "@likec4/diagram": "^1.46.4",
    "@likec4/layouts": "^1.46.4",
    "@mantine/core": "^8.3.10",
    "@sruja/shared": "*",
    "@sruja/ui": "*",
    "@xyflow/react": "^12.10.0",
    "events": "^3.3.0",
    "firebase": "^12.6.0",
    "framer-motion": "^11.18.2",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.555.0",
    "lz-string": "^1.5.0",
    "monaco-editor": "^0.52.2",
    "zustand": "^5.0.9"
  },
  "peerDependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@sruja/eslint-config": "*",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "jsdom": "^24.1.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.15"
  }
}
