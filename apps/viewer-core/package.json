  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.6.3",
    "vite": "^7.2.6",
