{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./out",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@sruja/shared/*": [
        "../../packages/shared/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "scripts",
    "eslint.config.ts"
  ]
}