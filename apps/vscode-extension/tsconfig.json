{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./out",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "scripts",
    "eslint.config.ts"
  ]
}