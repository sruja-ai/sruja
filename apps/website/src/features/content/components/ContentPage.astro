---
// apps/website/src/features/content/components/ContentPage.astro
interface Props {
  title: string;
  summary?: string;
}

const { title, summary } = Astro.props;
---

<div class="content-page">
  <header class="content-header">
    <h1>{title}</h1>
    {summary && <p class="summary">{summary}</p>}
  </header>
  <slot />
</div>

<style>
  .content-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .content-header {
    margin-bottom: 3rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e2e8f0;
    transition: border-color 0.2s;
  }

  :global(html.dark) .content-header {
    border-bottom-color: #334155;
  }

  .content-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.25;
    color: #0f172a;
    transition: color 0.2s;
  }

  :global(html.dark) .content-header h1 {
    color: #f1f5f9;
  }

  .summary {
    font-size: 1.25rem;
    color: #64748b;
    margin: 0;
    transition: color 0.2s;
  }

  :global(html.dark) .summary {
    color: #cbd5e1;
  }

  @media (max-width: 1024px) {
    .content-page {
      padding: 1.5rem;
    }

    .content-header h1 {
      font-size: 2rem;
    }

    .summary {
      font-size: 1.125rem;
    }
  }

  @media (max-width: 768px) {
    .content-page {
      padding: 1rem;
    }

    .content-header {
      margin-bottom: 2rem;
      padding-bottom: 1rem;
    }

    .content-header h1 {
      font-size: 1.75rem;
    }

    .summary {
      font-size: 1rem;
    }
  }

  @media (max-width: 640px) {
    .content-page {
      padding: 0.75rem;
    }

    .content-header h1 {
      font-size: 1.5rem;
    }
  }
</style>
