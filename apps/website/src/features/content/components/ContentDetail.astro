---
// apps/website/src/features/content/components/ContentDetail.astro
import type { MarkdownInstance } from 'astro';
import TableOfContents from './TableOfContents';
import CodeBlockActions from '@/shared/components/ui/CodeBlockActions';
import EngagementTracker from '@/shared/components/ui/EngagementTracker';
import ContentMeta from '@/shared/components/content/ContentMeta.astro';

interface Props {
  title: string;
  summary?: string;
  tags?: string[];
  date?: string;
  dateISO?: string;
  Content: MarkdownInstance<any>['Content'];
  standalone?: boolean;
}

const { title, summary, tags, date, dateISO, Content, standalone = false } = Astro.props;
---

{standalone ? (
  <div class="content-page-wrapper">
    <article class="content-detail">
      <header class="content-header">
        <h1>{title}</h1>
        <ContentMeta date={date} dateISO={dateISO} tags={tags} />
        {summary && <p class="summary">{summary}</p>}
      </header>
  <div class="content-wrapper">
    <div class="content-body">
      <Content />
    </div>
    <aside class="toc-sidebar">
      <TableOfContents client:load />
    </aside>
  </div>
  <!-- Inject toolbar for sruja code blocks -->
  <CodeBlockActions client:load />
  <EngagementTracker client:load />
</article>
  </div>
) : (
  <article class="content-detail">
    <header class="content-header">
      <h1>{title}</h1>
      <ContentMeta date={date} dateISO={dateISO} tags={tags} />
      {summary && <p class="summary">{summary}</p>}
    </header>
    <div class="content-wrapper">
      <div class="content-body">
        <Content />
      </div>
      <aside class="toc-sidebar">
        <TableOfContents client:load />
      </aside>
    </div>
    <!-- Add code block actions for sruja fences -->
    <script>
      // placeholder to ensure client bundling; actual component mounts via client:load below
    </script>
    <Fragment>
      {/* Inject toolbar for sruja code blocks */}
      <CodeBlockActions client:load />
      <EngagementTracker client:load />
    </Fragment>
  </article>
)}

<style>
  .content-page-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  @media (max-width: 1024px) {
    .content-page-wrapper {
      padding: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .content-page-wrapper {
      padding: 1rem;
    }
  }

  @media (max-width: 640px) {
    .content-page-wrapper {
      padding: 0.75rem;
    }
  }

  .content-detail {
    width: 100%;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: 3rem;
    align-items: start;
  }

  .toc-sidebar {
    position: sticky;
    top: 100px;
    height: fit-content;
    max-height: calc(100vh - 120px);
    overflow-y: auto;
  }

  @media (max-width: 1024px) {
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .toc-sidebar {
      position: static;
      order: -1;
      max-height: none;
    }
  }

  .content-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e2e8f0;
    transition: border-color 0.2s;
  }

  :global(html.dark) .content-header {
    border-bottom-color: #334155;
  }

  .content-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: #0f172a;
    transition: color 0.2s;
  }

  :global(html.dark) .content-header h1 {
    color: #f1f5f9;
  }

  .summary {
    font-size: 1.25rem;
    color: #64748b;
    margin: 0 0 1rem 0;
    transition: color 0.2s;
  }

  :global(html.dark) .summary {
    color: #cbd5e1;
  }

  .content-body {
    line-height: 1.7;
    color: #334155;
    transition: color 0.2s;
  }

  :global(html.dark) .content-body {
    color: #cbd5e1;
  }

  .content-body :global(h2) {
    font-size: 2rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: #0f172a;
    font-weight: 600;
    transition: color 0.2s;
    scroll-margin-top: 100px;
  }

  :global(html.dark) .content-body :global(h2) {
    color: #f1f5f9;
  }

  .content-body :global(h3) {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #1e293b;
    font-weight: 600;
    transition: color 0.2s;
    scroll-margin-top: 100px;
  }

  :global(html.dark) .content-body :global(h3) {
    color: #e2e8f0;
  }

  .content-body :global(h4) {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: #1e293b;
    font-weight: 600;
    transition: color 0.2s;
    scroll-margin-top: 100px;
  }

  :global(html.dark) .content-body :global(h4) {
    color: #e2e8f0;
  }

  .content-body :global(p) {
    margin-bottom: 1.25rem;
  }

  .content-body :global(code) {
    background: #f1f5f9;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
    font-family: 'Monaco', 'Menlo', monospace;
    color: #0f172a;
    transition: background-color 0.2s, color 0.2s;
  }

  :global(html.dark) .content-body :global(code) {
    background: #334155;
    color: #f1f5f9;
  }

  .content-body :global(pre) {
    background: #f8fafc;
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid #e2e8f0;
    transition: background-color 0.2s, color 0.2s, border-color 0.2s;
  }

  :global(html.dark) .content-body :global(pre) {
    background: #1e293b;
    border-color: #334155;
  }

  :global(html[data-theme="dark"]) .content-body :global(pre.astro-code) {
    background-color: var(--shiki-dark-bg, #0f172a) !important;
    color: #ffffff !important;
    border-color: #334155 !important;
  }
  :global(html[data-theme="dark"]) .content-body :global(pre.astro-code code),
  :global(html[data-theme="dark"]) .content-body :global(pre.astro-code span) {
    color: #ffffff !important;
  }

  .content-body :global(pre code) {
    background: transparent !important;
    padding: 0;
  }

  :global(html.dark) .content-body :global(pre code) {
    background: transparent !important;
  }

  .content-body :global(a) {
    color: #3b82f6;
    text-decoration: none;
  }

  .content-body :global(a:hover) {
    text-decoration: underline;
  }

  .content-body :global(ul),
  .content-body :global(ol) {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .content-body :global(li) {
    margin-bottom: 0.5rem;
  }
</style>
