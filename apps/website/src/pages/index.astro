---
// apps/website/src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import HomeHero from '@/features/home/components/HomeHero';
---

<Layout title="Sruja Learn" description="Documentation, courses, tutorials, and blogs for Sruja.">
  <HomeHero client:load />
</Layout>

<style>
  :global(.hero) {
    max-width: 800px;
    margin: 4rem auto;
    padding: 0 2rem;
    text-align: center;
  }

  :global(.hero h1) {
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
  }

  :global(.hero p) {
    font-size: 1.25rem;
    color: #64748b;
    margin: 1rem 0;
    line-height: 1.6;
  }

  :global(.hero a) {
    color: #3b82f6;
    text-decoration: none;
  }

  :global(.hero a:hover) {
    text-decoration: underline;
  }

  :global(.hero-actions) {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
    flex-wrap: wrap;
  }

  @media (max-width: 1024px) {
    :global(.hero) {
      margin: 3rem auto;
      padding: 0 1.5rem;
    }

    :global(.hero h1) {
      font-size: 2.5rem;
    }

    :global(.hero p) {
      font-size: 1.125rem;
    }
  }

  @media (max-width: 768px) {
    :global(.hero) {
      margin: 2rem auto;
      padding: 0 1rem;
    }

    :global(.hero h1) {
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    :global(.hero p) {
      font-size: 1rem;
    }

    :global(.hero-actions) {
      gap: 0.75rem;
      margin-top: 1.5rem;
    }
  }

  @media (max-width: 640px) {
    :global(.hero) {
      margin: 1.5rem auto;
      padding: 0 0.75rem;
    }

    :global(.hero h1) {
      font-size: 1.75rem;
    }

    :global(.hero p) {
      font-size: 0.9375rem;
    }
  }
</style>

