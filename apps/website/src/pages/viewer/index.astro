---
import LiveSrujaBlock from '@/features/playground/components/LiveSrujaBlock'
import '@sruja/ui/design-system/styles.css'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sruja Viewer for editing and previewing architectures" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/sruja-logo.svg" />
    <title>Viewer | Sruja</title>
  </head>
  <body>
    <div class="viewer-container" data-testid="viewer">
      <LiveSrujaBlock client:only="react" initialDsl="" />
    </div>
  </body>
  </html>

<style>
  :global(html),
  :global(body) {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    font-family: system-ui, sans-serif;
    background: var(--color-background, #ffffff);
    color: var(--color-text-primary, #0f172a);
    transition: background-color 0.2s, color 0.2s;
  }

  :global(html.dark),
  :global(html[data-theme='dark']) {
    background: #0f172a;
    color: #f1f5f9;
  }

  :global(html.light),
  :global(html[data-theme='light']) {
    background: #ffffff;
    color: #0f172a;
  }

  .viewer-container {
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  :global(html.dark) .viewer-container,
  :global(html[data-theme='dark']) .viewer-container {
    background: #0f172a;
    color: #f1f5f9;
  }
</style>

