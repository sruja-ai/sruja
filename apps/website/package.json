{
  "name": "@sruja/website",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "npm run ensure:wasm && astro dev",
    "start": "astro dev",
    "build": "npm run build:embed && npm run build:examples && astro build",
    "build:embed": "cd ../viewer-core && npm run build:embed && cp dist/embed-viewer.iife.js ../website/public/embed-viewer.js && cp dist/embed-viewer.css ../website/public/embed-viewer.css",
    "build:examples": "mkdir -p public/examples && cp -R ../../examples/* public/examples/",
    "preview": "astro preview",
    "ensure:wasm": "node ./scripts/ensure-wasm.mjs",
    "build:local": "npm run build:embed && npm run build:examples && NODE_ENV=development PUBLIC_ENV=development SITE_URL=http://localhost:4321 astro build",
    "build:dev": "npm run build:embed && npm run build:examples && NODE_ENV=production PUBLIC_ENV=dev SITE_URL=https://dev.sruja.ai astro build",
    "build:staging": "npm run build:embed && npm run build:examples && NODE_ENV=production PUBLIC_ENV=staging SITE_URL=https://staging.sruja.ai astro build",
    "build:prod": "npm run build:embed && npm run build:examples && NODE_ENV=production PUBLIC_ENV=production SITE_URL=https://sruja.ai astro build",
    "astro": "astro",
    "astro:local": "astro dev --host",
    "astro:dev": "astro dev --host",
    "astro:staging": "astro dev --host",
    "astro:prod": "astro dev --host",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf dist .astro"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.3",
    "@astrojs/mdx": "4.3.12",
    "@astrojs/react": "4.4.2",
    "@astrojs/tailwind": "^5.1.3",
    "@sruja/shared": "*",
    "@sruja/studio-core": "*",
    "@sruja/ui": "*",
    "@sruja/viewer": "*",
    "@sruja/viewer-core": "*",
    "algoliasearch": "^5.45.0",
    "@docsearch/react": "4.3.2",
    "@docsearch/css": "4.3.2",
    "astro": "^5.16.4",
    "buffer": "^6.0.3",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.555.0",
    "lz-string": "^1.5.0",
    "mermaid": "^10.7.0",
    "monaco-editor": "^0.52.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^22.7.9",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "esbuild": "^0.27.1",
    "jsdom": "^24.0.0",
    "typescript": "^5.6.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.15",
    "rimraf": "^5.0.5",
    "@sruja/eslint-config": "*",
    "eslint": "^9.39.1"
  }
}
