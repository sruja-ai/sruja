architecture "User Authentication System" {
    person User "End User"
    
    system AuthSystem "Authentication System" {
        container AuthAPI "Authentication API" {
            component LoginService "Login Service"
            component TokenService "Token Service"
        }
        
        datastore UserDB "User Database"
    }
    
    scenario "User Login Flow" {
        User -> AuthSystem.AuthAPI "Submits credentials"
        AuthSystem.AuthAPI -> AuthSystem.UserDB "Validates user"
        AuthSystem.UserDB -> AuthSystem.AuthAPI "Returns user data"
        AuthSystem.AuthAPI -> User "Returns JWT token"
    }
    
    scenario "Authentication Flow" {
        User -> AuthSystem.AuthAPI.LoginService "POST /login"
        AuthSystem.AuthAPI.LoginService -> AuthSystem.UserDB "SELECT user"
        AuthSystem.AuthAPI.LoginService -> AuthSystem.AuthAPI.TokenService "Generate token"
        AuthSystem.AuthAPI.TokenService -> User "Return JWT"
    }
}



























